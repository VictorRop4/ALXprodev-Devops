#!/bin/bash

# Array of Pokémon names
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
API_URL="https://pokeapi.co/api/v2/pokemon"
OUTPUT_DIR="pokemon_data"

# Create output directory if it does not exist
mkdir -p "$OUTPUT_DIR"

# Loop through Pokémon list
for POKEMON in "${POKEMONS[@]}"; do
    echo "Fetching data for $POKEMON..."
    
    # Perform API request and store HTTP status code
    RESPONSE=$(curl -s -w "%{http_code}" -o "$OUTPUT_DIR/${POKEMON}.json" "$API_URL/$POKEMON")
    
    if [ "$RESPONSE" -eq 200 ]; then
        echo "Saved data to $OUTPUT_DIR/${POKEMON}.json ✅"
    else
        echo "Failed to fetch $POKEMON (HTTP $RESPONSE) ❌"
        rm -f "$OUTPUT_DIR/${POKEMON}.json"  # Remove incomplete file
    fi
    
    # Delay to avoid rate-limiting
    sleep 1
done

